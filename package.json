{
  "name": "connect",
  "version": "0.0.8",
  "description": "Discord Clone - Messaging App",
  "author": "Mihir Patel",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "boot": "lerna bootstrap --concurrency=1",
    "dev": "lerna run dev",
    "dev:app": "lerna run dev --scope=@connect/{client,server}",
    "dev:web": "lerna run dev --scope=@connect/web",
    "dev:server": "lerna run dev --scope=@connect/server",
    "build": "lerna run build",
    "build:client": "lerna run build --scope=@connect/client",
    "build:web": "lerna run build --scope=@connect/web",
    "build:server": "lerna run build --scope=@connect/server",
    "version": "lerna version --conventional-commits",
    "diff": "lerna diff",
    "clean": "lerna clean --yes",
    "lerna-dockerize": "lerna-dockerize"
  },
  "dependencies": {
    "@connect/client": "file:packages\\client",
    "@connect/controller": "file:packages\\controller",
    "@connect/server": "file:packages\\server",
    "@connect/web": "file:packages\\web",
    "connect-redis": "^6.1.3",
    "redis": "^4.0.6",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-urql": "^3.5.7",
    "@types/bcryptjs": "2.4.2",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "17.0.23",
    "@types/react": "18.0.4",
    "@types/react-dom": "18.0.0",
    "autoprefixer": "10.4.4",
    "electron": "18.0.0",
    "electron-builder": "22.0.0",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.3",
    "graphql": "^15.3.0",
    "lerna": "^4.0.0",
    "lerna-dockerize": "^0.9.1",
    "next": "12.1.5",
    "nextron": "8.0.0",
    "nodemon": "^2.0.15",
    "postcss": "8.4.12",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "tailwindcss": "3.0.24",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
